<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="cpr_platform_mini" >

  <!-- Controller settings -->  
  <xacro:arg name="hardware_protocol" default="cri"/>

  <xacro:arg name="prefix" default="" />

  <xacro:include filename="$(find irc_ros_description)/urdf/platforms/cpr_platform_mini.macro.xacro" />
  <xacro:cpr_platform_mini prefix="$(arg prefix)" hardware_protocol="$(arg hardware_protocol)" />

</robot>
