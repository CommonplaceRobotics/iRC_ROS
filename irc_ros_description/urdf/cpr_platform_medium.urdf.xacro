<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="cpr_platform_medium" >

  <!-- Controller settings -->  
  <xacro:arg name="controller_type" default="mock_hardware"/>

  <xacro:arg name="prefix" default="" />

  <xacro:include filename="$(find irc_ros_description)/urdf/platforms/cpr_platform_medium.macro.xacro" />
  <xacro:cpr_platform_medium prefix="$(arg prefix)" controller_type="$(arg controller_type)" />

</robot>
