<?xml version="1.0" ?>
<!-- <robot xmlns:xacro="http://www.ros.org/wiki/xacro"> -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="cpr_platform_medium" >

  <xacro:property name="base_height" value="0.05"/>
  <xacro:property name="wheel_radius" value="0.07308"/>

  <link name="$(arg prefix)base_link">
    <visual>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/body.dae"/>
      </geometry>
      <origin rpy="0 0 3.14" xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/bodyColl.dae"/>
      </geometry>
      <origin rpy="0 0 ${pi}" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="$(arg prefix)joint_wheel_1" type="continuous">
    <parent link="$(arg prefix)base_link"/>
    <child link="$(arg prefix)wheel_1"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.25 -0.011"/>
    <!-- <origin rpy="0.0 0.0 0.0" xyz="0.0 0.236425 0.0"/> -->
    <axis xyz="0 -1 0"/>
    <!-- <limit effort="330.0" lower="-3.12414" upper="3.12414" velocity="2.16"/> -->
  </joint>
  <link name="$(arg prefix)wheel_1">
    <visual>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/wheel.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/wheelColl.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>

  <joint name="$(arg prefix)joint_wheel_2" type="continuous">
    <parent link="$(arg prefix)base_link"/>
    <child link="$(arg prefix)wheel_2"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.25 -0.011"/>
    <!-- <origin rpy="0.0 0.0 0.0" xyz="0.0 -0.236425 0.0"/> -->
    <axis xyz="0 -1 0"/>
    <!-- <limit effort="330.0" lower="-3.12414" upper="3.12414" velocity="2.16"/> -->
  </joint>
  <link name="wheel_2">
    <visual>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/wheel.dae"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://irc_ros_description/meshes/cpr_platform_medium/wheelColl.dae"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
    </inertial>
  </link>
  
  <joint name="$(arg prefix)joint_laser_front" type="fixed">
    <parent link="$(arg prefix)base_link"/>
    <child link="$(arg prefix)laser_front"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0 0"/>
  </joint>
  <link name="$(arg prefix)laser_front">
  </link>

  <joint name="$(arg prefix)joint_lidar_back" type="fixed">
    <parent link="base_link"/>
    <child link="laser_back"/>
    <origin rpy="0.0 0.0 ${pi}" xyz="-0.54 0 0"/>
  </joint>
  <link name="$(arg prefix)laser_back">
  </link>

</robot>
